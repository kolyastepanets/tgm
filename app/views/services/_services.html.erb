<% if @services.exists? %>
  <p class="new-task-modal__subtitle"><%= @services.first.classification %> tasks</p>
  <% @services.each do |service| %>
    <div>
      <p class="service-name <%= active_service(id, service.id) %>" data-service-id="<%= service.id %>" data-service-name="<%= service.name %>" data-service-type="<%= service.classification %>"><%= service.name %></p>
    </div>
  <% end %>
<% else %>
  <p>There are no services</p>
<% end %>
